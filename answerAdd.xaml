<Window x:Class="QUIZTIME2._0.answerAdd"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QUIZTIME2._0"
        mc:Ignorable="d"
        Title="answerAdd" Height="450" Width="800">
    <Grid>
        <Label Content="Vraag A:" HorizontalContentAlignment="Right" HorizontalAlignment="Left" Margin="138,146,0,0" VerticalAlignment="Top"  Height="29"/>
        <Label Content="Vraag B:" HorizontalContentAlignment="Right" HorizontalAlignment="Left" Margin="138,174,0,0" VerticalAlignment="Top"  Height="29"/>
        <Label Content="Vraag C:" HorizontalContentAlignment="Right" HorizontalAlignment="Left" Margin="138,0,0,0" VerticalAlignment="Center"  Height="29"/>
        <Label Content="Vraag D:" HorizontalContentAlignment="Right" HorizontalAlignment="Left" Margin="138,231,0,0" VerticalAlignment="Top"  Height="29"/>

        <TextBox Name="txbA" HorizontalAlignment="Left" Height="23" Margin="198,149,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="390"/>
        <TextBox Name="txbB" HorizontalAlignment="Left" Height="23" Margin="198,177,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="390"/>
        <TextBox Name="txbC" HorizontalAlignment="Left" Height="23" Margin="198,0,0,0" TextWrapping="Wrap" VerticalAlignment="Center" Width="390"/>
        <TextBox Name="txbD" HorizontalAlignment="Left" Height="23" Margin="198,234,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="390"/>

        <RadioButton x:Name="rbA" Content="A" HorizontalAlignment="Left" Margin="608,153,0,0" VerticalAlignment="Top"/>
        <RadioButton x:Name="rbB" Content="B" HorizontalAlignment="Left" Margin="608,181,0,0" VerticalAlignment="Top"/>
        <RadioButton x:Name="rbC" Content="C" HorizontalAlignment="Left" Margin="608,0,0,0" VerticalAlignment="Center"/>
        <RadioButton x:Name="rbD" Content="D" HorizontalAlignment="Left" Margin="608,237,0,0" VerticalAlignment="Top"/>

        <Button Name="btnAdd" Content="Add" HorizontalAlignment="Left" Margin="546,379,0,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="1.158,0.49"/>
        <Button x:Name="btnCancel" Content="Cancel" HorizontalAlignment="Left" Margin="654,379,0,0" VerticalAlignment="Top" Width="75"/>

    </Grid>
</Window>
